<Window x:Class="Exercises_DiagBoxes.MainWindow"
        x:Name="PrimaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercises_DiagBoxes"
        mc:Ignorable="d"
        Title="Text Editor" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <DockPanel>
            <Menu Grid.Row="0">
                <MenuItem Header="_File">
                    <MenuItem Header="_New" Click="MenuItem_Click_New"/>
                    <MenuItem Header="_Open" Click="MenuItem_Click_Open"/>
                    <MenuItem Header="_Save" Click="MenuItem_Click_Save"/>
                    <MenuItem Header="_Exit" Click="MenuItem_Click_Exit"/>
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem Header="_About" />
                </MenuItem>
            </Menu>
        </DockPanel>
        <TextBox x:Name="txtEditor" IsReadOnly = "False" Grid.Row="1" IsEnabled="False" TextChanged="txtEditor_TextChanged">
        </TextBox>
        <ScrollBar HorizontalAlignment="Right" Grid.Row="1">
        </ScrollBar>
    </Grid>
</Window>
